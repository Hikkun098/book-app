<div class="books-sell-contents">
  
  <div class="books-sell-main">
    <h2 class="books-sell-title">本の情報を入力</h2>
    <%= form_with model: @book, url: books_path, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 投稿画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        本の画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
          <%= f.file_field :image, id:"book-image" %>
        <div id="image-list" ></div>
      </div>
    </div>
    <%# /投稿画像 %>

    <%# 題名と概要 %>
    <div class="new-books">
      <div class="weight-bold-text">
        題名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :book_name, class:"books-text", id:"book-name", placeholder:"題名（必須 30文字まで)", maxlength:"30" %>
      <div class="books-explain">
        <div class="weight-bold-text">
          概要
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :description, class:"books-text", id:"book-info", placeholder:"本の概要（必須 300文字まで）" ,rows:"7" ,maxlength:"300" %>
      </div>
    </div>
    <%# /題名と概要 %>

    <%# 本の詳細 %>
    <div class="books-detail">
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"book-category"}) %>
      </div>
      <div class="price-content">
          <div class="price-text">
            <span>対象年齢</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">歳</span>
          <%= f.text_field :age, class:"price-input", id:"book-price", placeholder:"例）20" %>
        </div>
      <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"book-price", placeholder:"例）1000" %>
      </div>
    </div>
    <%# /本の詳細 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>

  </div>
  <% end %>
</div>